{
  "compilerOptions": {
    "target": "es2022",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,
    "baseUrl": "./",
    "rootDir": ".",
    "module": "es2022",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"],
      "vue-draggable": ["src/index.ts"]
    },
    "resolveJsonModule": true,
    "types": ["node"],
    "allowJs": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
